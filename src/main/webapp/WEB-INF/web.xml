<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<display-name>sgp</display-name>
	<servlet>
		<servlet-name>ListerCollaborateursController</servlet-name>
		<servlet-class>
			dev.sgp.web.ListerCollaborateursController
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditerCollaborateursController</servlet-name>
		<servlet-class>
			dev.sgp.web.EditerCollaborateursController
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AjouterCollaborateurController</servlet-name>
		<servlet-class>
			dev.sgp.web.AjouterCollaborateurController
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ListerCollaborateursController</servlet-name>
		<url-pattern>/collaborateurs/lister</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditerCollaborateursController</servlet-name>
		<url-pattern>/collaborateurs/editer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AjouterCollaborateurController</servlet-name>
		<url-pattern>/collaborateurs/nouveau</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>FrequentationFiltre</filter-name>
		<filter-class>dev.sgp.filtre.FrequentationFiltre</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>FrequentationFiltre</filter-name>
		<url-pattern>/statistiques</url-pattern>
	</filter-mapping>
</web-app>
